{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConsoleLogging": {
    "Enabled": true,
    "MinimumLevel": "Debug",
    "BatchEnabled": false,
    "BatchIntervalMs": 100,
    "DisableAtomicLogs": false
  },
  "ConsoleLogging:Categories": {
    "Simulation": true,
    "Combat": true,
    "AI": true,
    "Weapon": true,
    "EntityProcessor": false,
    "World": true,
    "API": true
  },
  "ConsoleLogging:CategoryLevels": {
    "Simulation": "Information",
    "Combat": "Debug",
    "AI": "Debug",
    "Weapon": "Information",
    "EntityProcessor": "Warning",
    "World": "Information",
    "API": "Information"
  }
}